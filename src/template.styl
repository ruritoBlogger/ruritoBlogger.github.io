$orange = #ffd977
$black = #515151
$title_size = 2.5vw
$tablet_title_size = 4vw
$smartphone_title_size = 10vw
$content_size = 1vw
$tablet_content_size = 1.5vw
$smartphone_content_size = 4vw

.inner
    width: 80%
    margin: auto
    display: flex

@media screen and (max-width: 1024px)
    .inner
        width: 100%
        justify-content: center

.title
    font-size: $title_size
    text-align: center

@media screen and (min-width: 764px) and (max-width: 1024px)
    .title
        font-size: $tablet_title_size

@media screen and (max-width: 764px)
    .title
        font-size: $smartphone_title_size

.content
    font-size: $content_size
    text-align: center
    margin: 1% 0

@media screen and (min-width: 764px) and (max-width: 1024px)
    .content
        font-size: $tablet_content_size

@media screen and (max-width: 764px)
    .content
        font-size: $smartphone_content_size

@media screen and (max-width: 764px)
    .disabledWhenSmartphone
        display: none
